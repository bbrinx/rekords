<p id="notice"><%= notice %></p>

<h1>Records</h1>



<div class="row">
  <p>Aktuell aufgestellte Rekorde</p>
</div>

<div class="row" id="tableBg">

  <div class="col">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Category<th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |record| %>
        <tr>
          <td><%= record.name %></td>
          <td><%= record.description %></td>
          <td><%= record.category.name %></td>
          <td><%= record.date %></td>
          <td><%= link_to 'Show', record %></td>
          <td><%= link_to 'Edit', edit_record_path(record) %></td>
          <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col">
    <button type="submit" name="commit">
      <%= link_to 'New Record', new_record_path %>
    </button>
  </div>




</div>


<br>

<button id="homeBtn" type="submit" name="commit">
  <%= link_to 'Back to Home', homes_path %>
</button>
