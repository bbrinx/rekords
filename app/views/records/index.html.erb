<p id="notice"><%= notice %></p>
<div class="row full" style="min-height:83px;">
  <div class="col">
    <%= image_tag("records.png")%>
  </div>
</div>
<div class="centering" id="tableBg" >
  <div class="row">
    <p>Aktuell aufgestellte Rekorde</p>
  </div>

  <div class="row">
    <div id="btnWrap">
      <ul>
        <li class="Btn">
          <%= link_to 'Neuen Rekord erstellen', new_record_path %>
        </li>
      </ul>
    </div>
  </div>

  <div class="row" id="tableBg">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category<th>
              <th>Date</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @records.each do |record| %>
            <tr>
              <td><%= record.name %></td>
              <td><%= record.description %></td>
              <td><%= record.category %></td>
              <td><%= record.date %></td>
              <td><%= link_to 'Show', record %></td>
              <td><%= link_to 'Edit', edit_record_path(record) %></td>
              <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
